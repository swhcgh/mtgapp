<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">

        <p id="notice"><%= notice %></p>
        
        <h1>Tournaments</h1>
        <div class="container">
          <table class="table">
            
            <tbody>
          
              <% @tournaments.each do |tournament| %>
                <tr>
                  <td class="col-sm-6 tdrow"><%= tournament.Name %></td>
                  <td class="col-sm-2"><%= link_to 'Show', tournament, class: "btn btn-default" %></td>
                  <td class="col-sm-2"><%= link_to 'Edit', edit_tournament_path(tournament), class: "btn btn-default" %></td>
                  <td class="col-sm-2"><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <br>
        
        <%= link_to 'New Tournament', new_tournament_path, class: "btn btn-default" %>
       

      </div>
    </div>
  </div>

</div>