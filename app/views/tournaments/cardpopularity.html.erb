<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">


<div class="container">
  <h1><%= "Card Popularity at " + @tournament.Name %></h1>

  
  <table class="table">
    <thead>
      <tr>
        <th>Card name</th>
        <th>Decks with this card </th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each.with_index do |a, i| %>
        <% if @pop[i] > 0 %>
        <tr>
          <td><%= a.Card_Name %></td>
          <td><%= number_to_percentage(@pop[i] * 100, precision: 2) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>


</div>
</div>
</div>
</div>