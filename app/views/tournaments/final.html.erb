<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">


<div class="container">
  
    <h1> <%= @tournament.Name %> Final Results</h1>

<h2>
<% if @winner == 'top2' %>
  <%= "Tie Win by "%><%= User.find(@contenders[0].user_id).Name %><%= " and " %><%= User.find(@contenders[1].user_id).Name %>
<% else %>
  <%= "Winner: " %><%= User.find(@contenders[0].user_id).Name %>
<% end %>
</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Player</th>
        <th>Final Score</th>
      </tr>
    </thead>
    <tbody>
      <% @contenders.each do |this| %>
        <tr>
          <td><%= User.find(this.user_id).Name %></td>
          <td><%= this.points %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
   <%= link_to 'Card Popularity', tournaments_cardpopularity_path(id: @tournament.id), class: 'btn btn-default' %>

        <%= link_to 'Delete This Tournament', tournament_path(@tournament), :method => 'delete', class: "btn btn-default" %>



</div>
</div>
</div>
</div>