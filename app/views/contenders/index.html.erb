<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">

<p id="notice"><%= notice %></p>

<h1>Contenders</h1>

<div class='container'>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Tournament</th>
        <th>Deck</th>
        <th>Points</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @contenders.each do |contender| %>
        <tr>
          <td><%= contender.user_id %></td>
          <td><%= contender.tournament_id %></td>
          <td><%= contender.deck_id %></td>
          <td><%= contender.points %></td>
          <td><%= link_to 'Show', contender, class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_contender_path(contender), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', contender, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Contender', new_contender_path, class: 'btn btn-default' %>
<br><br><br>

</div>
</div>
</div>
</div>