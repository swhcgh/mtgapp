<style>
  img {
    margin: 1em;
  }
</style>

<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">

<p id="notice"><%= notice %></p>

<h1>"<%= @deck.name %>" Deck</h1>

<%= link_to 'Edit This Deck', edit_deck_path(@deck), class: 'btn btn-default' %><br><br>

<div class="container">
<% @cards.each do |a| %>
  <% cards = MTG::Card.where(set: 'ORI').where(name: a.Card_Name).all %>
  <%#= cards.inspect %>
  <% if !cards.empty? %>
    <% card = cards[0] %>
    <%= link_to ('http://gatherer.wizards.com/Pages/Card/Details.aspx?multiverseid=' + card.id.to_s) do %>
          <%= image_tag card.image_url %>
            <% end %> 
  <% end %>
<% end %>
</div>
<br>



</div>
</div>
</div>
</div>