<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">


<h1>Decks</h1>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cardlist</th>
        <th>Cardcount</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @decks.each do |deck| %>
        <tr>
          <td><%= deck.name %></td>
          <td><%= deck.Cardlist %></td>
          <td><%= deck.Cardcount %></td>
          <td><%= link_to 'Show', deck, class: 'btn btn-default'  %></td>
          <td><%= link_to 'Edit', edit_deck_path(deck), class: 'btn btn-default'  %></td>
          <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Deck', new_deck_path, class: 'btn btn-default' %>
<br><br><br>
</div>
</div>
</div>
</div>