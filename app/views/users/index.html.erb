<div id="home-sec">
  <div class="overlay dark">
    <div class="container">
      <div class="col-md-8 pad-top scrollclass">
        
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="col-sm-6"><%= user.Name %></td>
        <td class='col-sm-2'><%= link_to 'Show', user, class: 'btn btn-default' %></td>
        <td class='col-sm-2'><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %></td>
        <td class='col-sm-2'><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
